# Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Google Gemini API Key
GOOGLE_API_KEY=your_google_api_key_here

# Pagar.me Configuration
PAGARME_API_KEY=your_pagarme_api_key_here
PAGARME_ENCRYPTION_KEY=your_pagarme_encryption_key_here

# Pagar.me Recipients (for split payments)
PLATFORM_RECIPIENT_ID=your_platform_recipient_id_here
LAWYER_RECIPIENT_ID=your_lawyer_recipient_id_here

# Payment Configuration (optional, defaults provided)
PLATFORM_FEE_PERCENTAGE=20
LAWYER_PAYMENT_PERCENTAGE=80

# Server Port (optional, defaults to 4000)
PORT=4000

# Environment (optional, defaults to development)
NODE_ENV=development